@model AspCore_Identity.Model.SignupNoEmailVM
@{
    ViewData["Title"] = "SignUpWithoutEmail";
    var Roles = new List<string> { "Member", "Admin" };
}

<h1>SignUpWithoutEmail</h1>
<form asp-controller="Identity" asp-action="SignUpWithoutEmail" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        <label asp-for="UserName">Email:</label>
        <input type-="text" name="UserName" asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Password">Password:</label>
        <input type-="text" name="Password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Role">Role:</label>
       @Html.DropDownListFor(x => x.Role, Roles.Select(a => new SelectListItem { Text = a, Value = a }), "roles", null);
    </div>


    <button type="submit" class="btn btn-primary">Signup!</button>
</form>