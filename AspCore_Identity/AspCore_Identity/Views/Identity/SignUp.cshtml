
@model AspCore_Identity.Model.SignupVM

<form asp-controller="Identity" asp-action="Signup" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        <label asp-for="UserName">Email:</label>
        <input type-="text" name="UserName" asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Password">Password:</label>
        <input type-="text" name="Password" asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Signup!</button>
</form>

<div class="alert alert-info">
    If you already have an account, pelase <a asp-action="Signin">sign in</a>
</div>
